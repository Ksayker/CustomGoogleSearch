<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fragment_page_search_top_bottom_margin"
    android:orientation="horizontal"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_cv_color_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="12dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/card_search_item_image"
                android:layout_width="0dp"
                android:layout_height="@dimen/fragment_page_search_card_height"
                android:layout_weight="2"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />

            <TextView
                android:id="@+id/card_search_item_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:textSize="@dimen/card_search_item_text_size"
                />

            <CheckBox
                android:id="@+id/card_search_item_cb_favorite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>