<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <SearchView
        android:id="@+id/fragment_page_search_sv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="@string/fragment_page_search_search_hint"
        android:textSize="@dimen/fragment_page_search_text_size"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_page_search_recycler_view_search_result"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        />
</LinearLayout>